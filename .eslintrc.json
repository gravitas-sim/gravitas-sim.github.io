{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prettier/prettier": "error"
  },
  "globals": {
    "canvas": "readonly",
    "ctx": "readonly",
    "starfieldCanvas": "readonly",
    "starfieldCtx": "readonly"
  }
} 